dt=10,			                ! timestep [au]

nwrite=1,		                ! how often some output should be printed (estimators etc.)
nwritex=1,		              	! how often should we print coordinates?
nrest=100,		                ! how often we print restart files?
nwritev=1,		                ! how often we print velocities?
narchive=100
/

