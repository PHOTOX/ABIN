&GLOBAL
  PROJECT WATER
  PRINT_LEVEL LOW
  RUN_TYPE ENERGY_FORCE
#PREFERRED_FFT_LIBRARY FFTSG
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    &MGRID
      CUTOFF 180
      NGRIDS 3
      REL_CUTOFF 20
    &END MGRID
    &SCF
      EPS_SCF 1.0E-6
      MAX_SCF 20
      SCF_GUESS ATOMIC
	&OT
	MINIMIZER DIIS
	PRECONDITIONER FULL_SINGLE_INVERSE
	&END OT
	 &OUTER_SCF
                MAX_SCF 100
                EPS_SCF 1.0E-6
         &END OUTER_SCF
    &END SCF
    &XC
      &XC_FUNCTIONAL PADE
      &END XC_FUNCTIONAL
       &XC_GRID
#         USE_FINER_GRID
         XC_SMOOTH_RHO NN10
         XC_DERIV NN10_SMOOTH
       &END XC_GRID
    &END XC
#    &POISSON
#	PERIODIC NONE
#	POISSON_SOLVER WAVELET
#    &END
  &END DFT
  &SUBSYS
    &TOPOLOGY
        COORD_FILE_NAME mini.dat
        COORD_FILE_FORMAT XYZ
    &END TOPOLOGY
    &CELL
#	PERIODIC NONE
	ABC 8.0 8.0 8.0
    &END CELL
    &KIND O
      BASIS_SET DZVP-MOLOPT-GTH
      POTENTIAL GTH-PBE-q6
    &END KIND
    &KIND H
      BASIS_SET DZVP-MOLOPT-GTH
      POTENTIAL GTH-PBE-q1
    &END KIND
  &END SUBSYS
    &PRINT
        &FORCES
        &END FORCES
    &END PRINT
&END FORCE_EVAL

